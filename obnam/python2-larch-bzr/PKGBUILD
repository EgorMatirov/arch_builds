# Maintainer: Filippov Aleksey <sarum9in@gmail.com>
pkgname=python2-larch-bzr
pkgver=0.0.0
pkgrel=1
pkgdesc="Python B-tree library"
arch=('i686' 'x86_64')
url="http://liw.fi/larch/"
license=('GPL3')
groups=()
depends=('python2' 'python2-tracing')
makedepends=('bzr')
provides=('python2-larch')
conflicts=('python2-larch')
replaces=()
backup=()
options=()
install=
source=("$pkgname::bzr+http://code.liw.fi/larch/bzr/trunk/")
noextract=()
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/$pkgname"
  bzr revno
}

build() {
  cd "$srcdir/$pkgname"
  find . -type f -exec sed -ri "s|^#!/usr/bin/python$|&2|g" '{}' '+'
  python2 setup.py build
}

package() {
  cd "$srcdir/$pkgname"
  python2 setup.py install --root="$pkgdir/" --optimize=1
}

# vim:set ts=2 sw=2 et:
