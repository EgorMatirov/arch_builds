# Maintainer: Filippov Aleksey <sarum9in@gmail.com>
pkgname=yandex.contest.invoker.compat.common-git
pkgver=0.0.0
pkgrel=1
pkgdesc="Yandex.Contest.Compat common utilities"
arch=('i686' 'x86_64')
url="https://github.com/sarum9in/yandex_contest_invoker_compat_common"
license=('GPL')
groups=()
depends=('boost-libs' 'yandex.contest.invoker-git')
makedepends=('git' 'boost')
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=("$pkgname::git://github.com/sarum9in/yandex_contest_invoker_compat_common.git")
noextract=()
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/$pkgname"
  echo $(git rev-list --count master).$(git rev-parse --short master)
}

build() {
  cd "$srcdir/$pkgname"
  mkdir build && cd build
  cmake .. -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=Release
  make $MAKEFLAGS
}

check() {
  cd "$srcdir/$pkgname/build"
  #make test
}

package() {
  cd "$srcdir/$pkgname/build"
  make DESTDIR="$pkgdir/" install
}
