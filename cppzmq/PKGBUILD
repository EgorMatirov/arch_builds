pkgname=cppzmq-git
pkgver=0.0.0
pkgrel=1
pkgdesc="This is C++ binding for 0MQ"
arch=(any)
url="https://github.com/zeromq/cppzmq"
license=('LGPL')
groups=()
depends=('zeromq-beta')
makedepends=('git')
provides=('cppzmq')
conflicts=('cppzmq')
replaces=()
backup=()
options=()
install=
source=("$pkgname::git://github.com/zeromq/cppzmq.git")
noextract=()
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/$pkgname"
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
  cd "$srcdir/$pkgname"
  #
  # BUILD HERE
  #
}

package() {
  cd "$srcdir/$pkgname"
  install -D -m 644 "zmq.hpp" "$pkgdir/usr/include/zmq.hpp"
}
