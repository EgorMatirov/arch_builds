# Maintainer: Filippov Aleksey <sarum9in@gmail.com>
pkgname=bunsan.worker-git
pkgver=0.0.0
pkgrel=1
pkgdesc="bunsan worker"
arch=('i686' 'x86_64')
url=""
license=('GPL')
groups=()
depends=('python' 'bunsan.common-git' 'bunsan.network-git' 'bunsan.pm-git' 'bunsan.dcs-git')
makedepends=('git')
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
#source=("$pkgname::git://cs.istu.ru/bunsan_worker.git")
source=("$pkgname::git://github.com/sarum9in/bunsan_worker.git")
noextract=()
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/$pkgname"
  echo $(git rev-list --count master).$(git rev-parse --short master)
}

build() {
  cd "$srcdir/$pkgname"
  mkdir build && cd build
  cmake .. -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=Release
  make $MAKEFLAGS
}

#check() {
#  cd "$srcdir/$pkgname/build"
#  make test
#}

package() {
  cd "$srcdir/$pkgname/build"
  make DESTDIR="$pkgdir/" install
}
