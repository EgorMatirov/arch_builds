# Maintainer: Aleksey Filippov <sarum9in@gmail.com>
pkgname='bunsan.bacs.problem.single-git'
pkgver=0.0.0
pkgrel=1
pkgdesc="bacs/problem/single plugin"
arch=('i686' 'x86_64')
url="https://github.com/bunsanorg/bacs_problem_single"
license=('GPL')
groups=()
depends=(
    'bunsan.pm-git'
    'bunsan.protobuf-git'
    'bunsan.bacs.problem-git'
    'libmariadbclient'
)
makedepends=('git' 'cmake' 'boost')
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=("$pkgname::git://github.com/bunsanorg/bacs_problem_single.git#branch=legacy0")
noextract=()
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/$pkgname"
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
  cd "$srcdir/$pkgname"
  rm -rf build && mkdir build && cd build
  cmake .. -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=Release
  make $MAKEFLAGS
}

check() {
  cd "$srcdir/$pkgname/build"
  #make test
}

package() {
  cd "$srcdir/$pkgname/build"
  make DESTDIR="$pkgdir/" install
}
