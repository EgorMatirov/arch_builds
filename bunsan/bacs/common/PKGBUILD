# Maintainer: Aleksey Filippov <sarum9in@gmail.com>
pkgname='bunsan.bacs.common-git'
pkgver=0.0.0
pkgrel=1
pkgdesc="bacs commons"
arch=('i686' 'x86_64')
url="https://github.com/sarum9in/bunsan_bacs_common"
license=('GPL')
groups=()
depends=('protobuf' 'boost-libs')
makedepends=('git' 'cmake' 'boost')
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
#source=("$pkgname::git://cs.istu.ru/bunsan_bacs_common.git")
source=("$pkgname::git://github.com/sarum9in/bunsan_bacs_common.git")
noextract=()
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/$pkgname"
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
  cd "$srcdir/$pkgname"
  mkdir build && cd build
  cmake .. -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=Release
  make $MAKEFLAGS
}

check() {
  cd "$srcdir/$pkgname/build"
  #make test
}

package() {
  cd "$srcdir/$pkgname/build"
  make DESTDIR="$pkgdir/" install
}
