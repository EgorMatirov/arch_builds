# Maintainer: Aleksey Filippov <sarum9in@gmail.com>
pkgname='bunsan.bacs.system.single-git'
pkgver=0.0.0
pkgrel=1
pkgdesc="bacs/system/single plugin"
arch=('i686' 'x86_64')
url="https://github.com/bunsanorg/bacs_system_single"
license=('GPL')
groups=()
depends=(
    'bunsan.protobuf-git'
    'bunsan.broker-git'
    'bunsan.bacs.system-git'
    'bunsan.bacs.problem.single-git'
)
makedepends=(
  'git'
  'cmake'
  'boost'
  'turtle'
)
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=("$pkgname::git://github.com/bunsanorg/bacs_system_single.git")
noextract=()
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/$pkgname"
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
  cd "$srcdir/$pkgname"
  rm -rf build && mkdir build && cd build
  cmake .. -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=Release
  make $MAKEFLAGS
}

check() {
  cd "$srcdir/$pkgname/build"
  make test ARGS=--output-on-failure
}

package() {
  cd "$srcdir/$pkgname/build"
  make DESTDIR="$pkgdir/" install
}
