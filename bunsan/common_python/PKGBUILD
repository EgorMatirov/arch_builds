# Maintainer: Aleksey Filippov <sarum9in@gmail.com>
pkgname='python-bunsan.common-git'
pkgver=0.0.0
pkgrel=1
pkgdesc="bunsan root python package"
arch=('i686' 'x86_64')
url="https://github.com/sarum9in/bunsan_common_python"
license=('GPL')
groups=()
depends=('python' 'bunsan.common-git')
makedepends=('git' 'python')
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
#source=("$pkgname::git://cs.istu.ru/bunsan_common_python.git")
source=("$pkgname::git://github.com/sarum9in/bunsan_common_python.git")
noextract=()
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/$pkgname"
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
  cd "$srcdir/$pkgname"
  python setup.py build
}

check() {
  cd "$srcdir/$pkgname/build"
  #make test
}

package() {
  cd "$srcdir/$pkgname"
  python setup.py install --root="$pkgdir/" --optimize=1
}
