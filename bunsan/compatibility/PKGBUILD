# Maintainer: Filippov Aleksey <sarum9in@gmail.com>
pkgname=bunsan.compatibility-git
pkgver=0.0.0
pkgrel=1
pkgdesc="bunsan project compatibility library"
arch=('i686' 'x86_64')
url=""
license=('GPL')
groups=()
depends=('xmlrpc-c' 'boost-libs' 'zeromq')
makedepends=('git' 'cmake')
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=("$pkgname::/home/lex/istu/dev/bunsan/compatibility/.git")
noextract=()
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/$pkgname"
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
  cd "$srcdir/$pkgname"
  mkdir build && cd build
  cmake .. -DCMAKE_INSTALL_PREFIX=/usr
  make $MAKEFLAGS
}

#check() {
#  cd "$srcdir/$pkgname/build"
#  make test
#}

package() {
  cd "$srcdir/$pkgname/build"
  make DESTDIR="$pkgdir/" install
}
