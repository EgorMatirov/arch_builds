# Maintainer: Aleksey Filippov <sarum9in@gmail.com>
pkgname='mingw-w64-bunsan.cmake-git'
pkgver=0.0.0
pkgrel=1
pkgdesc="bunsan project cmake library (mingw-w64)"
arch=('any')
url="https://github.com/bunsanorg/cmake"
license=('GPL')
groups=()
depends=('mingw-w64-cmake' 'mingw-w64-crt')
makedepends=(
  'git'
)
provides=()
conflicts=()
replaces=()
backup=()
options=('!strip' '!buildflags' 'staticlibs')
install=
source=("$pkgname::git://github.com/bunsanorg/cmake.git")
noextract=()
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/$pkgname"
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

_architectures="i686-w64-mingw32 x86_64-w64-mingw32"

build() {
  unset LDFLAGS
  cd "$srcdir/$pkgname-$pkgver/"
  for _arch in ${_architectures}; do
    mkdir -p build-${_arch} && pushd build-${_arch}
    ${_arch}-cmake \
      -DCMAKE_INSTALL_PREFIX=/usr \
      -DCMAKE_BUILD_TYPE=Release \
      ..
    make $MAKEFLAGS
    popd
  done
}

package() {
  for _arch in ${_architectures}; do
    cd "${srcdir}/$pkgname-$pkgver/build-${_arch}"
    make DESTDIR="${pkgdir}" install
    ${_arch}-strip --strip-unneeded "$pkgdir"/usr/${_arch}/bin/*.dll
    ${_arch}-strip -g "$pkgdir"/usr/${_arch}/lib/*.a
  done
}
