# Maintainer: Aleksey Filippov <sarum9in@gmail.com>
_pkgname=zeromq
pkgname=$_pkgname-beta
pkgver=3.1.0
pkgrel=1
epoch=
pkgdesc="Fast messaging system built on sockets. AKA 0MQ, ZMQ."
arch=('i686' 'x86_64')
url="http://www.zeromq.org/"
license=('LGPL')
groups=()
depends=()
makedepends=('asciidoc' 'xmlto')
checkdepends=()
optdepends=()
provides=('zeromq')
conflicts=('zeromq')
replaces=()
backup=()
options=()
install=
changelog=
source=("http://download.zeromq.org/$_pkgname-$pkgver-beta.tar.gz")
noextract=()
md5sums=('c9615e4442b325bd0c23a8205e380c40')

build() {
  cd "$srcdir/$_pkgname-$pkgver"
  ./configure --prefix=/usr
  make $MAKEFLAGS
}

check() {
  cd "$srcdir/$_pkgname-$pkgver"
  make -k check
}

package() {
  cd "$srcdir/$_pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}

