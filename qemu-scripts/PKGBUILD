# Maintainer: Aleksey Filippov <sarum9in@gmail.com>
pkgname=qemu-scripts
pkgver=0.6
pkgrel=2
epoch=
pkgdesc="QEMU start scripts"
arch=('i686' 'x86_64')
url=""
license=('GPL')
groups=()
depends=('bridge-utils' 'qemu' 'sudo')
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=('etc/qemu-scripts.conf')
options=()
install=qemu-scripts.install
changelog=
source=($pkgname-$pkgver.tar.xz)
noextract=()
md5sums=('1ffa449d8732b57f6cda7a5d38b40ca8')

case $CARCH in
  i686) _qemu_arch="i386" ;;
  *) _qemu_arch="$CARCH" ;;
esac

build() {
  cd "$srcdir/$pkgname-$pkgver"
}

#check() {
#  cd "$srcdir/$pkgname-$pkgver"
#  make -k check
#}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  tar cf - . | (cd "$pkgdir" && tar xf -)
  sed -r "s|^qemu=.*|qemu=('qemu-system-$_qemu_arch' '-enable-kvm')|" -i "$pkgdir/etc/qemu-scripts.conf"
}

# vim:set ts=2 sw=2 et:
