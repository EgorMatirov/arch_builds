case "$CARCH" in
    x86_64)
        _arch=x64
        _md5=0db576be472b0ff9b3947e9b3c0bb0b9
        ;;
    i686)
        _arch=i386
        _md5=fcded5679b5b944aed679db8dd33e08f
        ;;
    *) echo "Unknown arch $CARCH" >&2 && exit 1 ;;
esac

