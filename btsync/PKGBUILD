source=("http://btsync.s3-website-us-east-1.amazonaws.com/btsync_$_arch.tar.gz"
        'btsync.service')
noextract=()
md5sums=("$_md5"
         '0fa9b195953c61ee5bf6a6a13ed3f05a')

