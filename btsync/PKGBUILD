case "$CARCH" in
    x86_64)
        _arch=x64
        _md5=bcfa68a27c78251e131ff055b44ba960
        ;;
    i686)
        _arch=i386
        _md5=8ff0f06292618d282b16d3a73dfab3c6
        ;;
    *) echo "Unknown arch $CARCH" >&2 && exit 1 ;;
esac

