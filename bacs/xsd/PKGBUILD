# Maintainer: Filippov Aleksey <sarum9in@gmail.com>
pkgname=bacs.xsd-git
pkgver=0.0.0
pkgrel=1
pkgdesc="BACS XSD library"
arch=('any')
url="http://bacs.cs.istu.ru"
license=('GPL')
groups=()
depends=('python2' 'python2-pyxb')
makedepends=('git')
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=("$pkgname::")
noextract=()
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/$pkgname"
  echo $(git rev-list --count master).$(git rev-parse --short master)
}

build() {
  cd "$srcdir/$pkgname"
  ./gen.py
}

package() {
  cd "$srcdir/$pkgname"
  python2 setup.py install --root="$pkgdir/" --optimize=1
}

# vim:set ts=2 sw=2 et:
