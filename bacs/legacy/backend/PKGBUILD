# Maintainer: Aleksey Filippov <sarum9in@gmail.com>
pkgname='bacs.legacy.backend-git'
pkgver=131.cefb016
pkgrel=1
pkgdesc="BACS legacy backend"
arch=('i686' 'x86_64')
url="https://github.com/bacsorg/legacy_backend"
license=('GPL')
groups=()
depends=(
  'bunsan.pm-git'

  'mariadb-clients'

  'python2'
  'python'
  'gcc'
  'mono'
  'fpc'
  'java-environment'
)
makedepends=(
  'bunsan.cmake-git'
  'bunsan.test-git'
  'git'
  'boost'
  'turtle-git'
)
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=("$pkgname::git+https://github.com/bacsorg/legacy_backend.git")
noextract=()
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/$pkgname"
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
  cd "$srcdir/$pkgname"
  rm -rf build && mkdir build && cd build
  cmake .. -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=Release
  make $MAKEFLAGS
}

#check() {
#  cd "$srcdir/$pkgname/build"
#  make test ARGS=--output-on-failure
#}

package() {
  cd "$srcdir/$pkgname/build"
  make DESTDIR="$pkgdir/" install
}
